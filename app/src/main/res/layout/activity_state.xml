<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".StateActivity">

    <Spinner
            android:layout_width="268dp"
            android:layout_height="41dp"
            android:id="@+id/spinner"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="30sp"
            android:prompt="@string/select_a_state"
            android:textColor="@android:color/black"
            android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"/>
    <TextView
            android:text="@string/active_cases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/active"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner"
            android:textAlignment="textStart"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            android:fontFamily="sans-serif-condensed" android:textSize="30sp" android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="@+id/spinner" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Active Cases: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/spinner"
            app:layout_constraintTop_toTopOf="@+id/active"
            android:layout_marginStart="8dp"
            android:fontFamily="sans-serif-condensed" android:textSize="30sp" android:textStyle="bold"
            android:textAlignment="viewStart" android:textColor="@android:color/black"
            app:layout_constraintEnd_toStartOf="@+id/active" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>
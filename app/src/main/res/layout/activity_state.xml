<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".StateActivity">

    <EditText
            android:layout_width="268dp"
            android:layout_height="41dp"
            android:id="@+id/editText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toTopOf="@+id/button"
            app:layout_constraintBottom_toBottomOf="@+id/button" app:layout_constraintEnd_toStartOf="@+id/button"
            android:layout_marginEnd="8dp" android:hint="Enter a State"/>
    <Button
            android:text="@string/enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintStart_toEndOf="@+id/editText"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            app:layout_constraintHorizontal_bias="0.962" android:onClick="onClick"/>
    <TextView
            android:text="@string/active_cases"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/active"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@+id/editText" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="@+id/button"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.159"
            android:textAlignment="center" app:layout_constraintStart_toEndOf="@+id/textView3"/>
    <TextView
            android:text="Active Cases: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/editText"
            app:layout_constraintTop_toTopOf="@+id/active" app:layout_constraintBottom_toBottomOf="@+id/active"/>
</android.support.constraint.ConstraintLayout>